{
  "name": "Figame",
  "version": "1.0.0",
  "description": "Your Figma widget",
  "scripts": {
    "build": "esbuild widget-src/code.tsx --bundle --outfile=dist/code.js --target=es6",
    "tsc": "tsc --noEmit -p widget-src",
    "watch": "npm run build -- --watch",
    "build-svg": "tsc widget-src/assets/svg/convertor.ts --outDir dist --esModuleInterop",
    "run-svg": "npm run build-svg; node ./dist/convertor.js"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@figma/widget-typings": "*",
    "@types/node": "^18.11.8",
    "esbuild": "*",
    "typescript": "*"
  },
  "dependencies": {
    "glob": "^8.0.3"
  }
}
